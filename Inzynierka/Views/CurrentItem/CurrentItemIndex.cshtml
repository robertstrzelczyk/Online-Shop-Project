@model Inzynierka.Models.DetailsModel
@{
    ViewBag.Title = "CurrentItemIndex";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/woocommerce-FlexSlider-0690ec2/flexslider.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/HomeStyle.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/CurrentItem.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" href="~/Content/jquery-ui.css">
    <script defer src="~/woocommerce-FlexSlider-0690ec2/jquery.flexslider.js"></script>
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="col-lg-9 col-sm-6 col-xs-12">
            <div class="name">
              <h4 class="name">@Model.products.Manufacturer @Model.products.Model</h4>
            </div>
            <div id="slider" class="flexslider">   
                <ul class="slides">
                    @foreach (var item in Model.images)
                    {
                    <li>
                    @*    <img src="~/woocommerce-FlexSlider-0690ec2/images/1.jpg" />*@
                       @{ var base64 = Convert.ToBase64String(item.Image);
                           var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                       }
                        <img src="@imgSrc"/>
                    </li>
                    }
                </ul>
            </div>
            <div id="carousel" class="flexslider">
                <ul class="slides">
                    @foreach (var item in Model.images)
                    {
                        <li>
                        @{ var base64 = Convert.ToBase64String(item.Image);
                            var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }
                            <img src="@imgSrc" />
                            </li>
                      }
                </ul>
            </div>   
    </div>
    <div class="col-lg-3 col-sm-6 col-xs-12">
    <div class="price">
        <span class="pr">Cena:</span><span class="currentprice"> @Model.products.Price<span>zł</span></span>
        <div class="cartitem">
            <a href="#">Dodaj do koszyka</a>
        </div>
    </div> 
    </div>
    <div class="col-lg-12 col-sm-6 col-xs-12">
        <div class="table">
            <table>
                <tr class="wiersz">
                    <td></td>
                    <th class="col-lg-4">Procesor: </th>
                    <td class="col-lg-8">@Model.specs.Processor</td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">RAM: </th>
                    <td class="col-lg-8">@Model.specs.RAM <span>GB</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Maksymalny RAM: </th>
                    <td class="col-lg-8">@Model.specs.Max_RAM <span>GB</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Rozmiar Dysku: </th>
                    <td class="col-lg-8">@Model.specs.Disk_size <span>GB</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Typ Dysku: </th>
                    <td class="col-lg-8">@Model.specs.Disk_type</td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Typ Matrycy: </th>
                    <td class="col-lg-8">@Model.specs.Display_type</td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Rozmiar Matrycy: </th>
                    <td class="col-lg-8">@Model.specs.Display_size<span>"</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Rozdzielczość: </th>
                    <td class="col-lg-8">@Model.specs.Resolution</td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Karta Graficzna: </th>
                    <td class="col-lg-8">@Model.specs.Graphics_card</td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Bateria: </th>
                    <td class="col-lg-8">
                        @if (Model.specs.Battery == null)
                        {
                            <span>Brak danych</span>
                        }
                        else
                        {
                    @Model.specs.Battery
                        }
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">System Operacyjny: </th>
                    <td class="col-lg-8">@Model.specs.OS</td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Wysokość: </th>
                    <td class="col-lg-8">@Model.specs.Height <span>mm</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Szerokość: </th>
                    <td class="col-lg-8">@Model.specs.Width <span>mm</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Głębokość: </th>
                    <td class="col-lg-8">@Model.specs.Depth <span>mm</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Waga: </th>
                    <td class="col-lg-8">@Model.specs.Weight <span>kg</span></td>
                </tr>
                <tr>
                    <td></td>
                    <th class="col-lg-4">Gwarancja: </th>
                    <td class="col-lg-8">@Model.specs.Warranty <span>Miesiące</span></td>
                </tr>
            </table>
        </div>
    </div>
        <!-- jQuery -->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/libs/jquery-1.7.min.js">\x3C/script>')</script>

        <!-- FlexSlider -->
        <script defer src="~/woocommerce-FlexSlider-0690ec2/jquery.flexslider.js"></script>

        <script type="text/javascript">
            $(window).load(function () {
                $('#carousel').flexslider({
                    animation: "slide",
                    controlNav: false,
                    animationLoop: false,
                    slideshow: false,
                    itemWidth: 100,
                    itemMargin: 5,
                    asNavFor: '#slider'
                });

                $('#slider').flexslider({
                    animation: "slide",
                    controlNav: true,
                    animationLoop: false,
                    slideshow: false,
                    sync: "#carousel",
                    start: function (slider) {
                        $('body').removeClass('loading');
                    }
                });
            });
        </script>
</body>
</html>